@page "/js-interop-datepicker"
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<h3>JavaScript Interop Example</h3>
<input id="datePicker" />
<button @onclick="InitializeDatePicker">Initialize Date Picker</button>

<script>
    function initializeDatePicker(elementId) {
        $('#' + elementId).datepicker();
         $('#' + elementId).focus();
    }
</script>

@code {
    private async Task InitializeDatePicker()
    {
        await JSRuntime.InvokeVoidAsync("initializeDatePicker", "datePicker");
    }
}


